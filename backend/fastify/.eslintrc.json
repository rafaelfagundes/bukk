{
  "env": {
    "node": true,
    "es6": true,
    "amd": true,
    "mocha": true
  },
  "extends": "eslint:recommended",
  "plugins": ["mocha"],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "double"],
    "semi": ["error", "always"],
    "no-console": "off",
    "no-unused-vars": "warn",
    "mocha/no-exclusive-tests": "error"
  }
}
